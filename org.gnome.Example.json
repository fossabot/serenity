{
    "id" : "com.farthergate.serenity.Example",
    "runtime" : "org.gnome.Platform",
    "runtime-version" : "49",
    "sdk" : "org.gnome.Sdk",
    "command" : "serenity-example-launcher",
    "finish-args" : [
  	"--socket=x11",
  	"--share=ipc",
  	"--device=dri",
  	"--socket=pulseaudio"
    ],
    "cleanup" : [
        "/include",
        "/lib/pkgconfig",
        "/man",
        "/share/doc",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig",
        "*.la",
        "*.a"
    ],
    "modules" : [
    	{
	    "name": "perl",
	    "no-autogen": true,
	    "config-opts": [
		"-des",
		"-Duseshrplib"
	    ],
	    "build-options": {
		"cflags": "-fPIC",
		"ldflags": "-fpic"
	    },
	    "sources": [
		{
		    "type": "archive",
		    "url": "https://www.cpan.org/src/5.0/perl-5.42.0.tar.gz",
		    "sha256": "e093ef184d7f9a1b9797e2465296f55510adb6dab8842b0c3ed53329663096dc"
		},
		{
		    "type": "shell",
		    "commands": [
		        "ln -s configure{.gnu,}"
		    ]
		}
	    ],
	    "post-install": [
		"chmod -R u+w /app/lib/perl5"
	    ],
	    "cleanup": [
		"/bin/corelist",
		"/bin/cpan",
		"/bin/enc2xs",
		"/bin/encguess",
		"/bin/h2ph",
		"/bin/h2xs",
		"/bin/instmodsh",
		"/bin/json_pp",
		"/bin/libnetcfg",
		"/bin/perlbug",
		"/bin/perldoc",
		"/bin/perlivp",
		"/bin/perlthanks",
		"/bin/piconv",
		"/bin/pl2pm",
		"/bin/pod*",
		"/bin/prove",
		"/bin/ptar*",
		"/bin/shasum",
		"/bin/splain",
		"/bin/xsubpp",
		"/bin/zipdetails",
		"/include",
		"/man",
		"*.pod"
	    ]
	},
    	{
    	    "name": "catch2",
    	    "builddir": true,
    	    "buildsystem": "meson",
    	    "sources": [
    	        {
    	            "type": "git",
    	            "url": "https://github.com/catchorg/Catch2.git",
    	            "tag": "v3.11.0"
    	        }
    	    ]
    	},
	{
	    "name": "SDL",
	    "builddir": true,
	    "buildsystem": "cmake",
	    "sources": [
	        {
	            "type": "git",
	            "url": "https://github.com/libsdl-org/SDL.git",
	            "tag": "release-3.2.28"
	        }
            ]
        },
        {
	    "name": "SDL_ttf",
	    "builddir": true,
	    "buildsystem": "cmake",
	    "sources": [
	        {
	            "type": "git",
	            "url": "https://github.com/libsdl-org/SDL_ttf.git",
	            "tag": "release-3.2.2"
	        }
            ]
        },
        {
	    "name": "perl-libs",
	    "buildsystem": "simple",
	    "build-commands": [
		"perl-libs/install.sh"
	    ],
	    "post-install": [
		"chmod -Rf u+w /app/lib/perl5/site_perl"
	    ],
	    "sources": [
		"generated-sources.json"
	    ],
	    "cleanup": [
		"/bin",
		"/man"
	    ]
	},
        {
            "name" : "sup",
            "builddir" : true,
            "buildsystem" : "meson",
            "sources" : [
                {
                    "type" : "git",
                    "url" : "https://git.sr.ht/~aleksrutins/sup"
                }
            ]
        },
        {
            "name" : "serenity",
            "builddir" : true,
            "buildsystem" : "meson",
            "sources" : [
                {
                    "type" : "git",
                    "url" : "file:///home/aleks/Projects"
                }
            ]
        }
    ]
}
